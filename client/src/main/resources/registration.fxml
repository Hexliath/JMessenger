                              <Insets bottom="20.0" />
                           </VBox.margin>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="35.0" prefWidth="415.0">
                           <children>
                              <TextField fx:id="register_username_tf" prefHeight="32.0" promptText="Username" HBox.hgrow="ALWAYS">
